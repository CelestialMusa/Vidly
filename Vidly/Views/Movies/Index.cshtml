@model Vidly.ViewModels.MovieDetails

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    Lists a customers who rented out a movie by title.
*@

<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model.Movies)
        {
            <tr>
                <td>
                    @Html.ActionLink(@movie.Name, "MovieDetails", "Movies", new { Id = movie.Id, Name = movie.Name }, null)
                </td>
            </tr>
        }
    </tbody>
</table>


